<head>

    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/style.css" />
    <link rel="stylesheet" href="~/css/dashboard.css" />

</head>

<body>

    <div class="main-app-container shadow-lg rounded-4">
        <!-- Ícone de abrir menu (hambúrguer) -->
        <a href="#" class="icon-mobile" id="btn-open-sidebar">
            <i class="bi bi-list"></i>
        </a>
        <img src="~/images/logo-ams.png" alt="Imagem Topo" class="logo-mobile-top"
            style="position: fixed; top: 0; left: 50%; transform: translateX(-50%); width: 8rem; z-index: 1055;" />



        <div class="d-flex h-100 w-100">

            <!-- Sidebar -->
            <aside class="sidebar px-3 py-4 shadow-sm rounded-end" id="mobile-sidebar">
                <a href="#" class="close-sidebar" id="btn-close-sidebar">
                    <i class="bi bi-x-lg"></i>
                </a>

                <img src="~/images/logo-ams.png" alt="AMS Project" id="img-logo" class="img-fluid mb-4" />
                <ul class="nav flex-column mynav">
                    <li class="nav-item mb-2">

                        <a class="nav-link active" href="#" data-content="dashboard"> <i class="bi bi-border-style"></i>
                            Dashboard</a>
                    </li>
                    <li class="nav-item mb-2">

                        <a class="nav-link" href="#" data-content="calendario"> <i class="bi bi-calendar-week">
                            </i>Calendário</a>
                    </li>
                    <li class="nav-item mb-2">
                        <a class="nav-link" href="#" data-content="reunioes"><i class="bi bi-person-rolodex"></i>
                            Reuniões</a>
                    </li>
                    <li class="nav-item mb-2">

                        <a class="nav-link" href="#" data-content="eventos">
                            <i class="bi bi-yelp"></i>
                            Eventos
                        </a>
                    </li>
                </ul>
            </aside>

            <!-- Aqui o Index.cshtml entra -->
            @RenderBody()
        </div>
        <!-- Overlay -->
        <div class="sidebar-overlay d-none" id="sidebar-overlay"></div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
    <script src="~/js/sidebar.js"></script>
</body>
